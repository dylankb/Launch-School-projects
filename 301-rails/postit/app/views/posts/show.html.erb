<% if logged_in? %>
  <p class="pull-right">
    [<%= link_to 'Edit this post', edit_post_path(@post) %>]
  </p>
<% end %>

<%= render @post.categories %>
<%= render 'shared/content_title', title: @post.title %>

<p><%= @post.url %></p>
<p><%= @post.description %></p>
<hr/>
<% if logged_in? %>
  <%= form_for [@post, @comment] do |f| %>
    <% if @comment.errors.any? %>
      <%= render 'shared/errors', form_object: @comment %>
    <% end %>
    <div class="control-group">
      <%= f.label(:body, "Leave a comment") %>
      <%= f.text_area :body, rows: 4, class: 'span4' %>
    </div>
    <%= f.submit "Comment", class: "btn btn-info" %>
    <hr/>
  <% end %>
<% end %>

<p>Comments:</p>
<% @post.comments.each do |comment| %>
  <div class="well span8">
    "<%= comment.body %>"
    <p>
      <span class="quiet">by <%= link_to comment.commenter.username, '' %></span> <small>at <%= format_date(comment.created_at) %></small>
  </div>
<% end %>
