<div class="row">
  <div class="span8 well">
    <div class="post-categories">
      <%= render post.categories %>
    </div>
    <h4><%= link_to post.title, format_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class="quiet">posted by <%= post.creator.username %></span>
      <small>at <%= format_date(post.created_at) %></small>
    </p>
    <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
    </small>
    <p>
      <small>
        <span>
          <%= link_to("Edit", edit_post_path(post)) %>
        </span>
      </small>
    </p>
  </div>
</div>
