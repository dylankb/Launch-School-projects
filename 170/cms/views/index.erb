<html>
  <body>
    <div id="signin">
      <% if session[:username] %>
        <p class="user-status">You are signed in as <%= session[:username]%></p>
      <% else %>
        <button>
          <a href="/users/signin"> Sign In</a>
        </button>
      <% end %>
        <form class="inline" action="/users/signout" method="post">
          <button input="submit">Sign Out</button>
        </form>
    </div>
    <table>
      <ul>
        <% @files.each do |file| %>
          <tr>
            <td>
              <a href="/<%= file %>"><%= file %></a>
            </td>
            <td>
              <a href="/<%= file %>/edit">Edit</a>
            </td>
            <td>
              <form class="inline" method="post" action="/<%= file %>/delete">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
        <% end %>
      </ul>
    </table>
    <p>
      <a href="/new">New Document</a>
    </p>
  </body>
</html>